{
  "name": "horat1us/ws-chat",
  "description": "WebSocket Chat Application (pet-project)",
  "type": "library",
  "license": "UNLICENSED",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "phpstan/phpstan": "^0.12.42",
    "squizlabs/php_codesniffer": "3.*",
    "eaglewu/swoole-ide-helper": "dev-english"
  },
  "autoload": {
    "psr-4": {
      "Horat1us\\WSC\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\WSC\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "lint": "./vendor/bin/phpcs --standard=PSR12 -h",
    "lint-fix": "./vendor/bin/phpcbf --standar=PSR12 -h"
  }
}
